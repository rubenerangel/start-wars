extends layout

block content
  
  .col-12.text-center.my-2
    h2= `Planet: ${planet.name}`
  
  .col-6.mx-auto.shadow.rounded.p-3.mt-3
    .row
      .col-4.text-right.font-weight-bold Terrain
      .col-8.border-left.text-capitalize= planet.terrain
      .col-4.text-right.font-weight-bold Gravity
      .col-8.border-left.text-capitalize= planet.gravity
      .col-4.text-right.font-weight-bold Diameter
      .col-8.border-left.text-capitalize= planet.diameter
      .col-4.text-right.font-weight-bold Population
      .col-8.border-left.text-capitalize= planet.population
  
  block goback
    .row.pt-3
      .col-1.mx-auto
        a(href=`javascript:history.back()` title=`Go Back`)
          i.fa.fa-arrow-circle-left.fa-4x